<% for x in @show_crypto %>
	<% if @crypto.symbol.upcase == x["symbol"] %>
		<% crypto_name = x["name"] %>
		<% crypto_price = x["price_gbp"] %>
		<% current_value = x["price_gbp"].to_d * @crypto.amount_owned %>
		<% proft_loss = (x["price_gbp"].to_d * @crypto.amount_owned) - (@crypto.cost_per * @crypto.amount_owned) %>
	<% end %>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= crypto_name %></h3>
  </div>
  <div class="panel-body">
  	<strong><%= @crypto.symbol %></strong>
		<p>
		  <strong>Cost per:</strong>
		  <%= @crypto.cost_per %> 
		</p>

		<p>
		  <strong>Amount owned:</strong>
		  <%= @crypto.amount_owned %>
		</p>
		<p>
			<strong>Current value:</strong>
			£<%= current_value %>
		</p>
		<p>
			<strong>Profit/Loss:</strong>
			£<%= proft_loss %>
		</p>
  </div>
   <div class="panel-footer"><%= link_to 'Edit', edit_crypto_path(@crypto) %> |
		<%= link_to 'Delete', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' } %> |
		<%= link_to 'Back', cryptos_path %> 
	</div>
	</div>
</div>









