<h1>Top 100 Cryptocurrencies By Market Capitalization</h1>
<p>Find me in app/views/home/index.html.erb</p>

<br />
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Market Cap</th>
      <th>Current Price</th>
      <th>Volume (24h)</th>
      <th>Available Supply</th>
      <th>Percent Changed (24h)</th>
      <th>Add To Portfolio</th>
    </tr>
  </thead>
<tbody>
	<% for x in @coins %>
	<tr>
		<td><%= x["name"] %></td>
		<td><%= x["market_cap_usd"] %></td>
		<td><%= x["price_usd"] %></td>
		<td><%= x["24h_volume_usd"] %></td>
		<td><%= x["available_supply"] %></td>
		<td><%= x["percent_change_24h"] %>%</td>
		<td style="text-align: center;"><% if user_signed_in? %>
			<%= link_to '<span class="glyphicon glyphicon-plus" >'.html_safe, new_crypto_path, class: "btn btn-default" %>
			<% else %>
			<%= link_to '<span class="glyphicon glyphicon-plus">'.html_safe, new_user_session_url, class: "btn btn-default" %>
		</span></td>
		<% end %>
	</tr>
</tbody>


<% end %>

